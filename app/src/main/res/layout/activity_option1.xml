<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.example.raushan.firegooglein.Option1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Spinner
            android:id="@+id/spinner4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:entries="@array/prop_size" />

        <Spinner
            android:id="@+id/spinner5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner4"
            android:layout_marginTop="25dp"
            android:entries="@array/prop_furnish"/>

        <EditText
            android:id="@+id/editText7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner5"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Enter Rent"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner7"
            android:layout_marginTop="25dp"
            android:text="Select date" />

        <EditText
            android:id="@+id/editText10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Enter Deposit"
            android:inputType="number" />

        <EditText
            android:id="@+id/editText11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner6"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:hint="Enter Brokerage"
            android:inputType="number" />

        <Spinner
            android:id="@+id/spinner7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:entries="@array/prop_tenant"
            android:layout_marginTop="25dp" />


        <EditText
            android:id="@+id/editText8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner7"
            android:hint="Special Supply notes"
            android:layout_marginTop="25dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/cobb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText14"
            android:layout_marginTop="25dp"
            android:text="Submit" />
    </LinearLayout>
</ScrollView>
